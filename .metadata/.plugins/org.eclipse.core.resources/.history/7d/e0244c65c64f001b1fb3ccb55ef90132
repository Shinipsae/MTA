package q27;

public class Q27 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	public static double safeRoot(double radicand, double index) {
		if(radicand >= 0) {
			return Math.pow(radicand, 1 / index);
		} else {
			if(index % 2 == 0) {
				return null;
			} else {
				return -Math.pow(-radicand, 1 / index);
			}
		}
	}

}
